@model Car_Rental_Management.ViewModel.UserViewModel

@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2 class="text-center mb-4" data-aos="fade-down" style="color: var(--primary-color);">Change Your Password</h2>

@if (ViewBag.Message != null)
{
    <div style="text-align:center; padding:10px; margin-bottom:15px; background-color: var(--highlight-color); color: var(--secondary-color); border-radius:10px;" data-aos="fade-in">
        @ViewBag.Message
    </div>
}

<div class="card" style="max-width:500px; margin:auto; padding:30px; border-radius:20px; background-color: var(--card-color); box-shadow: 0 10px 30px rgba(0,0,0,0.15);">
    <form asp-action="ChangePassword" method="post" data-aos="fade-up" data-aos-duration="1000">

        <label asp-for="CurrentPassword" style="font-weight:bold; color: var(--secondary-color);"></label>
        <input asp-for="CurrentPassword" type="password" placeholder="Current Password" style="width:100%; padding:12px; margin:8px 0 16px 0; border-radius:10px; border:1px solid var(--secondary-color); transition: all 0.3s ease; outline:none;" />
        <span asp-validation-for="CurrentPassword" style="color: #e3342f;"></span>

        <label asp-for="NewPassword" style="font-weight:bold; color: var(--secondary-color);"></label>
        <input asp-for="NewPassword" type="password" placeholder="New Password" style="width:100%; padding:12px; margin:8px 0 16px 0; border-radius:10px; border:1px solid var(--secondary-color); transition: all 0.3s ease; outline:none;" />
        <span asp-validation-for="NewPassword" style="color: #e3342f;"></span>

        <label asp-for="ConfirmPassword" style="font-weight:bold; color: var(--secondary-color);"></label>
        <input asp-for="ConfirmPassword" type="password" placeholder="Confirm Password" style="width:100%; padding:12px; margin:8px 0 16px 0; border-radius:10px; border:1px solid var(--secondary-color); transition: all 0.3s ease; outline:none;" />
        <span asp-validation-for="ConfirmPassword" style="color: #e3342f;"></span>

        <button type="submit" style="width:100%; padding:14px; border:none; border-radius:12px; background-color: var(--primary-color); color: var(--light-color); font-weight:bold; font-size:1.1rem; cursor:pointer; transition: all 0.3s ease;">
            Change Password
        </button>
    </form>
</div>

<!-- Optional Cursor Glow -->
<div id="cursorGlow"></div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/aos@2.3.4/dist/aos.js"></script>
    <link href="https://cdn.jsdelivr.net/npm/aos@2.3.4/dist/aos.css" rel="stylesheet" />

    <script>
        AOS.init({ duration: 1200, once: true });

        // Input glow
        document.querySelectorAll('input').forEach(input => {
            input.addEventListener('focus', () => input.style.boxShadow = `0 0 12px var(--primary-color)`);
            input.addEventListener('blur', () => input.style.boxShadow = 'none');
        });

        // Cursor glow
        const cursor = document.getElementById('cursorGlow');
        cursor.style.position = 'fixed';
        cursor.style.width = '25px';
        cursor.style.height = '25px';
        cursor.style.borderRadius = '50%';
        cursor.style.pointerEvents = 'none';
        cursor.style.transform = 'translate(-50%, -50%)';
        cursor.style.background = 'radial-gradient(circle, var(--primary-color) 0%, rgba(0,0,0,0) 60%)';
        cursor.style.zIndex = 9999;

        document.addEventListener('mousemove', e => {
            cursor.style.top = e.clientY + 'px';
            cursor.style.left = e.clientX + 'px';
        });
    </script>

    <style>
        :root {
            --primary-color: #076B66;
            --secondary-color: #0D1f23;
            --dark-color: #0d1f23;
            --light-color: #ffffff;
            --card-color: #b3d4d3;
            --highlight-color: #cbf1f0;
        }

        .card:hover {
            transform: translateY(-5px);
            box-shadow: 0 20px 40px rgba(0,0,0,0.25);
            transition: all 0.3s ease;
        }

        button:hover {
            transform: scale(1.05);
            box-shadow: 0 0 15px var(--primary-color), 0 0 30px rgba(7,107,102,0.4);
        }

        input {
            border-radius: 8px;
            padding: 0.75rem;
            border: 1px solid var(--secondary-color);
            transition: box-shadow 0.3s ease, border-color 0.3s ease;
        }

        @@media (max-width: 576px) {
            .card

        {
            margin: 20px;
            padding: 20px;
        }

        }
    </style>
}
