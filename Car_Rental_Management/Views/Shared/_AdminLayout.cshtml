@*
    Views/Shared/_AdminLayout.cshtml
*@
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Admin Dashboard</title>

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">

    <style>
        body {
            background-color: #f0f2f8;
        }

        /* Sidebar */
        .sidebar {
            height: 100vh;
            background: linear-gradient(180deg, #6a11cb, #2575fc); /* Purple → Blue */
            color: white;
            padding: 20px;
            position: fixed;
            top: 0;
            left: 0;
        }

            .sidebar h2 {
                font-weight: bold;
                margin-bottom: 30px;
            }

            .sidebar a {
                display: block;
                color: white;
                padding: 12px 15px;
                border-radius: 8px;
                text-decoration: none;
                margin-bottom: 8px;
                transition: all 0.3s ease;
            }

                .sidebar a:hover {
                    background: rgba(255, 255, 255, 0.2);
                    transform: translateX(5px);
                }

        /* Main content area */
        .content {
            margin-left: 220px; /* sidebar width */
            padding: 20px;
        }

        /* Summary Cards */
        .card-summary {
            background-color: white;
            padding: 20px;
            border-radius: 10px;
            flex: 1;
            text-align: center;
            border-left: 6px solid #6a11cb; /* Purple border highlight */
            box-shadow: 0 4px 8px rgba(106, 17, 203, 0.2);
            transition: transform 0.3s;
        }

            .card-summary:hover {
                transform: translateY(-5px);
            }

        /* Header */
        .header-icon {
            font-size: 1.6rem;
            color: #6a11cb;
        }

        /* Card style */
        .card {
            border: none;
            border-radius: 12px;
            box-shadow: 0 4px 10px rgba(37, 117, 252, 0.15);
        }

            .card h5 {
                color: #2575fc;
                font-weight: bold;
            }

        footer {
            margin-left: 220px;
        }
    </style>
</head>
<body>
    <div class="container-fluid">
        <div class="row">
            <!-- Sidebar -->
            <nav class="col-md-2 d-none d-md-block sidebar">
                <h2 class="mb-4">GoDrive</h2>
                <a asp-controller="AddCar" asp-action="Details">Car Management</a>
                <a asp-controller="Customer" asp-action="Register">Customer Management</a>
                <a asp-controller="Staff" asp-action="Create">Staff Management</a>
                <a asp-controller="Booking" asp-action="Booking">Booking Management</a>
                <a asp-controller="Payment" asp-action="PaymentDetails">Payment Management</a>
                <a asp-controller="Admin" asp-action="Dashboard">Settings</a>
                <a asp-controller="AdminLogin" asp-action="Login">AdminLogin</a>
                <a asp-controller="AdminAdd" asp-action="Add">AdminAdd</a>
            </nav>

            <!-- Main Content -->
            <main class="col-md-10 ms-sm-auto px-md-4 py-4 content">
                <!-- Top header -->
                <div class="d-flex justify-content-between align-items-center mb-4">
                    <h1 class="h2 text-primary">@ViewData["Title"]</h1>
                    <div class="d-flex align-items-center">
                        <input class="form-control me-2" type="text" placeholder="Search...">
                        <span class="header-icon">👤</span>
                    </div>
                </div>

                <!-- Page Body -->
                @RenderBody()
            </main>
        </div>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

    <!-- Scripts Section -->
    @await RenderSectionAsync("Scripts", required: false)

    <!-- Footer -->
    <footer class="bg-primary text-white text-center py-2 mt-4">
        <small class="fw-bold">© 2025 - Car_Rental_Management - Privacy</small>
    </footer>
</body>
</html>
