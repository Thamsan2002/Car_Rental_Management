@using Microsoft.AspNetCore.Mvc.Routing
@{
    string currentController = ViewContext.RouteData.Values["controller"]?.ToString() ?? "";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Admin Dashboard</title>

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">

    <style>
        :root {
            --primary-color: #076B66;
            --secondary-color: #0D1f23;
            --dark-color: #0d1f23;
            --light-color: #ffffff;
            --card-color: rgba(179,212,211,0.2);
            --highlight-color: #cbf1f0;
            --glow-color: #00fff7;
        }

        body {
            margin: 0;
            font-family: 'Segoe UI', sans-serif;
            background: linear-gradient(135deg, var(--highlight-color), #e6fffd);
            padding-bottom: 60px; /* footer space */
        }

        /* Sidebar */
        .sidebar {
            width: 240px;
            height: 100vh;
            background: var(--secondary-color);
            color: var(--light-color);
            padding: 20px;
            position: fixed;
            top: 0;
            left: 0;
            box-shadow: 2px 0 10px rgba(0,0,0,0.2);
        }

            .sidebar h2 {
                font-weight: bold;
                margin-bottom: 30px;
                text-align: center;
                color: var(--primary-color);
            }

            .sidebar a {
                display: block;
                color: var(--light-color);
                padding: 12px 15px;
                border-radius: 8px;
                text-decoration: none;
                margin-bottom: 12px;
                font-weight: 500;
                transition: all 0.3s ease;
                position: relative;
            }

                .sidebar a:hover {
                    background: rgba(255,255,255,0.1);
                    box-shadow: 0 0 10px var(--glow-color);
                    transform: translateX(8px);
                }

                .sidebar a.active {
                    background: var(--primary-color);
                    font-weight: bold;
                    box-shadow: 0 0 15px var(--glow-color);
                }

        /* Main content */
        .content {
            margin-left: 240px;
            padding: 25px;
        }

        .card-summary, .card {
            border-radius: 14px;
            transition: all 0.3s ease-in-out;
        }

            .card-summary:hover {
                transform: scale(1.05);
                box-shadow: 0 0 20px var(--glow-color);
            }

        /* Footer */
        footer {
            position: fixed;
            bottom: 0;
            left: 240px; /* match sidebar width */
            right: 0;
            height: 60px;
            background: var(--secondary-color);
            color: var(--light-color);
            display: flex;
            align-items: center;
            justify-content: center;
            border-top: 2px solid var(--primary-color);
            box-shadow: 0 -3px 10px rgba(0,0,0,0.2);
            font-size: 0.9rem;
        }
    </style>
</head>
<body>
    <div class="container-fluid">
        <div class="row">
            <!-- Sidebar -->
            <nav class="sidebar">
                <h2>GoDrive</h2>

                <a class="@(currentController == "AddCar" ? "active" : "")" asp-controller="AddCar" asp-action="Details">🚗 Car Management</a>
                <a class="@(currentController == "Customer" ? "active" : "")" asp-controller="Customer" asp-action="Register">👥 Customer Management</a>
                <a class="@(currentController == "AdminLogin" ? "active" : "")" asp-controller="Driver" asp-action="Index">🔑 Driver Management</a>
                <a class="@(currentController == "Staff" ? "active" : "")" asp-controller="Staff" asp-action="Index">🧑‍💼 Staff Management</a>
                <a class="@(currentController == "Booking" ? "active" : "")" asp-controller="Booking" asp-action="AllBookings">📅 Booking Management</a>
                <a class="@(currentController == "Payment" ? "active" : "")" asp-controller="Payment" asp-action="PaymentDetails">💳 Payment Management</a>
                <a class="@(currentController == "Admin" ? "active" : "")" asp-controller="User" asp-action="EditProfile">⚙️ Settings</a>
                <a class="@(currentController == "AdminAdd" ? "active" : "")" asp-controller="Admin" asp-action="List">➕ AdminAdd</a>
            </nav>

            <!-- Main Content -->
            <main class="col px-md-4 py-4 content">
                <div class="d-flex justify-content-between align-items-center mb-4">
                    <h1 class="h2 text-dark">@ViewData["Title"]</h1>
                    <div class="d-flex align-items-center">
                        <input class="form-control me-2 shadow-sm" type="text" placeholder="🔍 Search...">
                        <span class="header-icon">👤</span>
                    </div>
                </div>

                @RenderBody()
            </main>
        </div>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

    <!-- Scripts Section -->
    @await RenderSectionAsync("Scripts", required: false)

    <footer>
        © 2025 - Car_Rental_Management | All Rights Reserved
    </footer>
</body>
</html>
