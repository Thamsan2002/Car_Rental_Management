@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor HttpContextAccessor

@{
    var userId = HttpContextAccessor.HttpContext.Session.GetString("UserId");
    var userEmail = HttpContextAccessor.HttpContext.Session.GetString("UserEmail");
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - KTS CarRental</title>

    <!-- Bootstrap & Icons -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet" />

    <!-- AOS Animation -->
    <link href="https://cdn.jsdelivr.net/npm/aos@2.3.4/dist/aos.css" rel="stylesheet" />

    <!-- Custom CSS -->
    <link rel="stylesheet" href="~/css/home.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/footer.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/about.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/Car.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/Contact.css" asp-append-version="true" />

</head>
<body>
    <!-- 🔹 Loading Overlay -->
    <div class="loading-overlay" id="loadingOverlay">
        <div class="road">
            <i class="bi bi-car-front-fill car"></i>
        </div>
        <div class="loading-text">Loding...</div>
    </div>

    <!-- 🔹 Navbar -->
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark fixed-top">
            <div class="container-fluid">
                <a class="navbar-brand fw-bold text-white" asp-controller="Home" asp-action="Index">KTS</a>

                <button class="navbar-toggler mobile-menu-btn" type="button">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navMenu">
                    <ul class="navbar-nav ms-auto mb-2 mb-lg-0">
                        <li class="nav-item"><a asp-controller="Home" asp-action="Index" class="nav-link">Home</a></li>
                        <li class="nav-item"><a href="#features" class="nav-link">About</a></li>
                        <li class="nav-item"><a href="#cars" class="nav-link">Cars</a></li>
                        <li class="nav-item"><a href="#contact" class="nav-link">Contact</a></li>

                        <!-- Profile/Login Dropdown -->
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle d-flex align-items-center" href="#" id="profileDropdown"
                               role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="fas fa-user-circle fa-lg me-2"></i>
                            </a>
                            <ul class="dropdown-menu dropdown-menu-end">
                                @if (!string.IsNullOrEmpty(userId))
                                {
                                    <li class="dropdown-item text-center">
                                        <strong>@userEmail</strong>
                                    </li>
                                    <li><a class="dropdown-item" asp-controller="Customer" asp-action="Profile">My Profile</a></li>
                                    <li><a class="dropdown-item" asp-controller="Booking" asp-action="MyBookings">View Bookings</a></li>
                                    <li><a class="dropdown-item" asp-controller="Home" asp-action="Privacy">Privacy</a></li>
                                    <li><a class="dropdown-item" asp-controller="Roadside" asp-action="RequestHelp">Need</a></li>
                                    <li><hr class="dropdown-divider" /></li>
                                    <li>
                                        <form method="post" asp-controller="Customer" asp-action="Logout" class="d-inline">
                                            <button type="submit" class="dropdown-item">Logout</button>
                                        </form>
                                    </li>
                                }
                                else
                                {
                                    <li><a class="dropdown-item" asp-controller="Customer" asp-action="Login">Login</a></li>
                                    <li><a class="dropdown-item" asp-controller="Customer" asp-action="SignUp">Sign Up</a></li>
                                }
                            </ul>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <!-- Mobile Menu Overlay -->
    <div id="mobileMenu" class="mobile-menu-overlay">
        <span class="close-menu" onclick="toggleMobileMenu()">&times;</span>
        <ul>
            <li><a asp-controller="Home" asp-action="Index" onclick="toggleMobileMenu()">Home</a></li>
            <li><a href="#features" onclick="toggleMobileMenu()">About</a></li>
            <li><a href="#cars" onclick="toggleMobileMenu()">Cars</a></li>
            <li><a href="#contact" onclick="toggleMobileMenu()">Contact</a></li>
            @if (!string.IsNullOrEmpty(userId))
            {
                <li><a asp-controller="Customer" asp-action="Profile" onclick="toggleMobileMenu()">My Profile</a></li>
                <li><a asp-controller="Booking" asp-action="MyBookings" onclick="toggleMobileMenu()">My Bookings</a></li>
                <li>
                    <form method="post" asp-controller="Customer" asp-action="Logout" class="d-inline">
                        <button type="submit">Logout</button>
                    </form>
                </li>
            }
            else
            {
                <li><a asp-controller="Customer" asp-action="Login" onclick="toggleMobileMenu()">Login</a></li>
                <li><a asp-controller="Customer" asp-action="SignUp" onclick="toggleMobileMenu()">Sign Up</a></li>
            }
        </ul>
    </div>

    <main role="main" class="flex-grow-1">
        @RenderBody()
    </main>

    <!-- Footer -->
    <footer class="footer">
        <div class="container footer-grid">
            <div class="footer-col">
                <h3>KTS Car Rental</h3>
                <p>Your trusted partner for premium car rentals.</p>
                <div class="social-links">
                    <a href="https://facebook.com/DriveEasy" target="_blank"><i class="fab fa-facebook"></i></a>
                    <a href="https://twitter.com/DriveEasy" target="_blank"><i class="fab fa-twitter"></i></a>
                    <a href="https://instagram.com/DriveEasy" target="_blank"><i class="fab fa-instagram"></i></a>
                    <a href="https://linkedin.com/company/DriveEasy" target="_blank"><i class="fab fa-linkedin"></i></a>
                </div>
            </div>

            <div class="footer-col">
                <h4>Contact Us</h4>
                <p><i class="fas fa-map-marker-alt"></i> 123 Main Street, Jaffna, Sri Lanka</p>
                <p><i class="fas fa-phone"></i> +94 77 123 4567</p>
                <p><i class="fas fa-envelope"></i> Example@gmail.com</p>
            </div>

            <div class="footer-col">
                <h4>Quick Links</h4>
                <a asp-controller="Home" asp-action="Index">Home</a>
                <a href="#features">About</a>
                <a href="#cars">Cars</a>
                <a href="#contact">Contact</a>
            </div>
        </div>

        <div class="footer-bottom">
            <p>&copy; 2025 KTS. All rights reserved.</p>
        </div>
    </footer>

    <!-- WhatsApp Floating Button -->
    <a class="chatbutton" onclick="openWhatsApp()" target="_blank">
        <i class="fab fa-whatsapp"></i>
    </a>

    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/aos@2.3.4/dist/aos.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    <script>
     

        function openWhatsApp() {
            var phoneNumber = '+94766213930';
            var whatsAppURL = 'https://wa.me/' + phoneNumber;
            window.open(whatsAppURL, '_blank');
        }

        // function toggleMobileMenu() {
        //     document.getElementById("mobileMenu").classList.toggle("active");
        // }

        // window.addEventListener("scroll", function () {
        //     const nav = document.querySelector("nav.navbar");
        //     if (window.scrollY > 50) nav.classList.add("scrolled");
        //     else nav.classList.remove("scrolled");
        // });

        document.querySelector(".navbar-toggler").addEventListener("click", toggleMobileMenu);
    </script>

    @RenderSection("Scripts", required: false)
</body>
</html>
