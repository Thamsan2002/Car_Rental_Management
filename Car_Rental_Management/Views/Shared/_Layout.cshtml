@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - KTS CarRental</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet" />

    <!-- External CSS -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/about.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/footer.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/Contact.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/home.css" asp-append-version="true" />
</head>
<body>
    <!-- Navbar -->
    <header>
        <nav class="navbar container-fluid">
            <div class="logo">KTS</div>
            <ul class="nav-links" id="navLinks">
                <li><a asp-controller="Home" asp-action="Index">Home</a></li>
                <li><a asp-controller="Car" asp-action="Index">Cars</a></li>
                <li><a asp-controller="Home" asp-action="About">About</a></li>
                <li><a asp-controller="Home" asp-action="Contact">Contact</a></li>
                <li><a asp-controller="Customer" asp-action="Register" class="btn-login"><i class="fas fa-sign-in-alt"></i> Login</a></li>
            </ul>
            <button class="mobile-menu-btn" id="menuBtn"><i class="fas fa-bars"></i></button>
        </nav>
    </header>

    <!-- Main Content -->
    <main role="main" class="flex-grow-1">
        @RenderBody()
    </main>

    <!-- Footer -->
    @await Html.PartialAsync("_Footer")

    <!-- Scripts -->
    <script>
        const menuBtn = document.getElementById("menuBtn");
        const navLinks = document.getElementById("navLinks");
        menuBtn.addEventListener("click", () => {
            navLinks.classList.toggle("active");
        });
    </script>

    @RenderSection("Scripts", required: false)
</body>
</html>
