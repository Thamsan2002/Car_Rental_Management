@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor HttpContextAccessor

@{
    var userId = HttpContextAccessor.HttpContext.Session.GetString("UserId");
    var userEmail = HttpContextAccessor.HttpContext.Session.GetString("UserEmail");
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - KTS CarRental</title>

    <!-- Bootstrap & FontAwesome -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet" />

    <!-- AOS Animation -->
    <link href="https://cdn.jsdelivr.net/npm/aos@2.3.4/dist/aos.css" rel="stylesheet" />

    <!-- Custom CSS -->
    <link rel="stylesheet" href="~/css/home.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/footer.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/Customer.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/about.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/Car.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/Contact.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark" style="background-color:#002366;">
            <div class="container-fluid">
                <a class="navbar-brand fw-bold text-white" asp-controller="Home" asp-action="Index">KTS</a>

                <!-- Mobile toggle button -->
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navMenu"
                        aria-controls="navMenu" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <!-- Nav items -->
                <div class="collapse navbar-collapse" id="navMenu">
                    <ul class="navbar-nav ms-auto mb-2 mb-lg-0">
                        <li class="nav-item"><a asp-controller="Home" asp-action="Index" class="nav-link">Home</a></li>
                        <li class="nav-item"><a href="#features" class="nav-link">About</a></li>
                        <li class="nav-item"><a href="#cars" class="nav-link">Cars</a></li>
                        <li class="nav-item"><a href="#contact" class="nav-link">Contact</a></li>

                        <!-- Profile/Login Dropdown -->
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle d-flex align-items-center" href="#" id="profileDropdown"
                               role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="fas fa-user-circle fa-lg me-2"></i>
                                <span>
                                    @if (!string.IsNullOrEmpty(userId))
                                    {
                                        @userEmail
                                    }
                                    else
                                    {
                                        @:Guest
                                    }
                                </span>
                            </a>
                            <ul class="dropdown-menu dropdown-menu-end">
                                @if (!string.IsNullOrEmpty(userId))
                                {
                                    <li class="dropdown-item text-center">
                                        <strong>@userEmail</strong>
                                    </li>
                                    <li><a class="dropdown-item" asp-controller="Customer" asp-action="Profile">My Profile</a></li>
                                    <li><a class="dropdown-item" asp-controller="Booking" asp-action="MyBookings">View Bookings</a></li>
                                    <li><a class="dropdown-item" asp-controller="Home" asp-action="Privacy">Privacy</a></li>
                                    <li><hr class="dropdown-divider" /></li>
                                    <li>
                                        <form method="post" asp-controller="Customer" asp-action="Logout" class="d-inline">
                                            <button type="submit" class="dropdown-item">Logout</button>
                                        </form>
                                    </li>
                                }
                                else
                                {
                                    <li><a class="dropdown-item" asp-controller="Customer" asp-action="SignUp">Login</a></li>
                                    <li><a class="dropdown-item" asp-controller="Customer" asp-action="SignUp">Sign Up</a></li>
                                }
                            </ul>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <main role="main" class="flex-grow-1">
        @RenderBody()
    </main>

    @await Html.PartialAsync("_Footer", model: null)

    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/aos@2.3.4/dist/aos.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>
