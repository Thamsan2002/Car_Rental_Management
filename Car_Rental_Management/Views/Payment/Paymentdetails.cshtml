
ï»¿<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>payment management</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body class="d-flex flex-column min-vh-100 bg-light">


    <!-- header -->
    <div class="bg-primary text-white text-center py-3 mb-4">
        <h2 class="fw-bold">payment management</h2>
        <p class="mb-0">manage all payments and billing records</p>
    </div>

    <!-- content -->
    <div class="container flex-grow-1">
        <div class="row g-4">

            <!-- payment form -->
            <div class="col-lg-5">
                <div class="card border-0 shadow">
                    <div class="card-header bg-primary text-white fw-bold">new payment</div>
                    <div class="card-body">
                        <form>
                            <div class="mb-3">
                                <label class="form-label fw-bold">full name</label>
                                <input type="text" class="form-control" placeholder="john doe">
                            </div>
                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <label class="form-label fw-bold">nic / id</label>
                                    <input type="text" class="form-control" placeholder="123456789v">
                                </div>
                                <div class="col-md-6 mb-3">
                                    <label class="form-label fw-bold">contact no</label>
                                    <input type="text" class="form-control" placeholder="+94 77 123 4567">
                                </div>
                            </div>
                            <div class="mb-3">
                                <label class="form-label fw-bold">email</label>
                                <input type="email" class="form-control" placeholder="example@mail.com">
                            </div>
                            <div class="mb-3">
                                <label class="form-label fw-bold">invoice #</label>
                                <input type="text" class="form-control" placeholder="inv-2025-001">
                            </div>
                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <label class="form-label fw-bold">payment date</label>
                                    <input type="date" class="form-control">
                                </div>
                                <div class="col-md-6 mb-3">
                                    <label class="form-label fw-bold">amount (lkr)</label>
                                    <input type="number" class="form-control" placeholder="0.00">
                                </div>
                            </div>
                            <div class="mb-3">
                                <label class="form-label fw-bold">payment method</label>
                                <select class="form-select">
                                    <option>-- select --</option>
                                    <option>cash</option>
                                    <option>card</option>
                                    <option>bank transfer</option>
                                    <option>online</option>
                                </select>
                            </div>
                            <div class="mb-3">
                                <label class="form-label fw-bold">transaction / ref id</label>
                                <input type="text" class="form-control" placeholder="abc123xyz">
                            </div>
                            <div class="mb-3">
                                <label class="form-label fw-bold">received by</label>
                                <input type="text" class="form-control" placeholder="admin name">
                            </div>
                            <div class="mb-3">
                                <label class="form-label fw-bold">notes</label>
                                <textarea class="form-control" rows="3"></textarea>
                            </div>
                            <div class="d-flex gap-2">
                                <button type="submit" class="btn btn-primary fw-bold">save payment</button>
                                <button type="reset" class="btn btn-outline-secondary fw-bold">clear</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>

            <!-- payment details -->
            <div class="col-lg-7">
                <div class="card border-0 shadow h-100">
                    <div class="card-header bg-danger bg-gradient text-white fw-bold">payment details</div>
                    <div class="card-body">
                        <div class="table-responsive" style="max-height:500px;">
                            <table class="table table-bordered table-hover align-middle">
                                <thead class="table-primary">
                                    <tr class="fw-bold text-dark text-center">
                                        <th style="width: 5%;">#</th>
                                        <th style="width: 15%;">payer</th>
                                        <th style="width: 15%;">invoice</th>
                                        <th style="width: 15%;">amount</th>
                                        <th style="width: 10%;">method</th>
                                        <th style="width: 15%;">ref id</th>
                                        <th style="width: 10%;">date</th>
                                        <th style="width: 10%;">received by</th>
                                        <th style="width: 15%;">actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr>
                                        <td>1</td>
                                        <td>john doe</td>
                                        <td>inv-2025-001</td>
                                        <td>12,500.00</td>
                                        <td>card</td>
                                        <td>trx987654</td>
                                        <td>2025-09-02</td>
                                        <td>admin</td>
                                        <td>
                                            <button class="btn btn-sm btn-outline-primary fw-bold">view</button>
                                            <button class="btn btn-sm btn-outline-danger fw-bold">delete</button>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>2</td>
                                        <td>jane smith</td>
                                        <td>inv-2025-002</td>
                                        <td>8,000.00</td>
                                        <td>cash</td>
                                        <td>---</td>
                                        <td>2025-09-02</td>
                                        <td>admin</td>
                                        <td>
                                            <button class="btn btn-sm btn-outline-primary fw-bold">view</button>
                                            <button class="btn btn-sm btn-outline-danger fw-bold">delete</button>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>3</td>
                                        <td>michael lee</td>
                                        <td>inv-2025-003</td>
                                        <td>15,000.00</td>
                                        <td>bank</td>
                                        <td>bnk001245</td>
                                        <td>2025-09-02</td>
                                        <td>staff a</td>
                                        <td>
                                            <button class="btn btn-sm btn-outline-primary fw-bold">view</button>
                                            <button class="btn btn-sm btn-outline-danger fw-bold">delete</button>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>4</td>
                                        <td>sara wilson</td>
                                        <td>inv-2025-004</td>
                                        <td>9,500.00</td>
                                        <td>online</td>
                                        <td>onl984532</td>
                                        <td>2025-09-01</td>
                                        <td>admin</td>
                                        <td>
                                            <button class="btn btn-sm btn-outline-primary fw-bold">view</button>
                                            <button class="btn btn-sm btn-outline-danger fw-bold">delete</button>
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                        <div class="d-flex justify-content-between mt-3">
                            <small class="text-muted">showing 1 to 4 of 4 entries</small>
                            <button class="btn btn-sm btn-outline-secondary fw-bold">refresh</button>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>

    <!-- footer -->
    <footer class="bg-primary text-white text-center py-2 mt-4">
        <small class="fw-bold">Â© 2025 - car_rental_management - privacy</small>
    </footer>

</body>
</html>

