<style>
    :root {
        --primary-color: #076B66;
        --secondary-color: #0D1F23;
        --dark-color: #0d1f23;
        --light-color: #ffffff;
        --card-color: #b3d4d3;
        --highlight-color: #cbf1f0;
        --danger-color: #d9534f;
        --success-color: #27ae60;
    }


    body {
        background-color: var(--highlight-color);
        font-family: Arial, sans-serif;
        color: var(--secondary-color);
    }

    h2 {
        color: var(--primary-color);
        margin-bottom: 10px;
    }

    .card {
        background-color: var(--card-color);
        border-radius: 10px;
        box-shadow: 0 4px 6px rgba(0,0,0,0.1);
        margin-bottom: 20px;
    }

    .card-header {
        font-weight: 600;
        border-radius: 10px 10px 0 0;
    }

    .btn {
        border-radius: 5px;
        font-weight: 500;
        transition: 0.3s;
    }

    .btn-primary {
        background-color: var(--primary-color);
        color: var(--light-color);
    }

        .btn-primary:hover {
            background-color: var(--dark-color);
            color: var(--light-color);
        }

    .btn-outline-primary {
        border-color: var(--primary-color);
        color: var(--primary-color);
    }

        .btn-outline-primary:hover {
            background-color: var(--primary-color);
            color: var(--light-color);
        }

    .btn-outline-danger {
        border-color: var(--danger-color);
        color: var(--danger-color);
    }

        .btn-outline-danger:hover {
            background-color: var(--danger-color);
            color: var(--light-color);
        }

    .btn-outline-secondary {
        border-color: var(--secondary-color);
        color: var(--secondary-color);
    }

        .btn-outline-secondary:hover {
            background-color: var(--secondary-color);
            color: var(--light-color);
        }

    table {
        width: 100%;
        border-collapse: collapse;
        overflow-x: auto;
    }

    th {
        background-color: var(--secondary-color);
        color: var(--light-color);
        padding: 10px;
        text-align: center;
    }

    td {
        background-color: var(--card-color);
        padding: 8px;
        text-align: center;
    }

    tr:nth-child(even) td {
        background-color: #d0e3e2;
    }

    tbody tr:hover {
        background-color: var(--highlight-color);
        transform: scale(1.01);
        transition: 0.2s;
    }

    .form-label {
        font-weight: 600;
    }
</style>

<!-- Header -->
<div class="bg-primary text-white text-center py-3 mb-4 rounded">
    <h2 class="fw-bold">Payment Management</h2>
    <p class="mb-0">Manage all payments and billing records</p>
</div>

<!-- Content -->
<div class="container flex-grow-1">
    <div class="row g-4">

        <!-- Payment Form -->
        <div class="col-lg-5">
            <div class="card border-0 shadow">
                <div class="card-header bg-primary text-white fw-bold">New Payment</div>
                <div class="card-body">
                    <form>
                        <div class="mb-3">
                            <label class="form-label">Full Name</label>
                            <input type="text" class="form-control" placeholder="John Doe">
                        </div>
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label class="form-label">NIC / ID</label>
                                <input type="text" class="form-control" placeholder="123456789V">
                            </div>
                            <div class="col-md-6 mb-3">
                                <label class="form-label">Contact No</label>
                                <input type="text" class="form-control" placeholder="+94 77 123 4567">
                            </div>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Email</label>
                            <input type="email" class="form-control" placeholder="example@mail.com">
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Invoice #</label>
                            <input type="text" class="form-control" placeholder="INV-2025-001">
                        </div>
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label class="form-label">Payment Date</label>
                                <input type="date" class="form-control">
                            </div>
                            <div class="col-md-6 mb-3">
                                <label class="form-label">Amount (LKR)</label>
                                <input type="number" class="form-control" placeholder="0.00">

                            </div>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Payment Method</label>
                            <select class="form-select">
                                <option>-- Select --</option>
                                <option>Cash</option>
                                <option>Card</option>
                                <option>Bank Transfer</option>
                                <option>Online</option>
                            </select>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Transaction / Ref ID</label>
                            <input type="text" class="form-control" placeholder="ABC123XYZ">
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Received By</label>
                            <input type="text" class="form-control" placeholder="Admin name">
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Notes</label>
                            <textarea class="form-control" rows="3"></textarea>
                        </div>
                        <div class="d-flex gap-2">
                            <button type="submit" class="btn btn-primary fw-bold">Save Payment</button>
                            <button type="reset" class="btn btn-outline-secondary fw-bold">Clear</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <!-- Payment Details -->
