@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";

}



    <!-- Header -->
    <div class="bg-primary text-white text-center py-3 mb-4">
        <h2 class="fw-bold">Payment Management</h2>
        <p class="mb-0">Manage all payments and billing records</p>
    </div>

    <!-- Content -->
    <div class="container flex-grow-1">
        <div class="row g-4">

            <!-- Payment Form -->
            <div class="col-lg-5">
                <div class="card border-0 shadow">
                    <div class="card-header bg-primary text-white fw-bold">New Payment</div>
                    <div class="card-body">
                        <form>
                            <div class="mb-3">
                                <label class="form-label fw-bold">Full Name</label>
                                <input type="text" class="form-control" placeholder="John Doe">
                            </div>
                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <label class="form-label fw-bold">NIC / ID</label>
                                    <input type="text" class="form-control" placeholder="123456789V">
                                </div>
                                <div class="col-md-6 mb-3">
                                    <label class="form-label fw-bold">Contact No</label>
                                    <input type="text" class="form-control" placeholder="+94 77 123 4567">
                                </div>
                            </div>
                            <div class="mb-3">
                                <label class="form-label fw-bold">Email</label>
                                <input type="email" class="form-control" placeholder="example@mail.com">
                            </div>
                            <div class="mb-3">
                                <label class="form-label fw-bold">Invoice #</label>
                                <input type="text" class="form-control" placeholder="INV-2025-001">
                            </div>
                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <label class="form-label fw-bold">Payment Date</label>
                                    <input type="date" class="form-control">
                                </div>
                                <div class="col-md-6 mb-3">
                                    <label class="form-label fw-bold">Amount (LKR)</label>
                                    <input type="number" class="form-control" placeholder="0.00">
                                </div>
                            </div>
                            <div class="mb-3">
                                <label class="form-label fw-bold">Payment Method</label>
                                <select class="form-select">
                                    <option>-- Select --</option>
                                    <option>Cash</option>
                                    <option>Card</option>
                                    <option>Bank Transfer</option>
                                    <option>Online</option>
                                </select>
                            </div>
                            <div class="mb-3">
                                <label class="form-label fw-bold">Transaction / Ref ID</label>
                                <input type="text" class="form-control" placeholder="ABC123XYZ">
                            </div>
                            <div class="mb-3">
                                <label class="form-label fw-bold">Received By</label>
                                <input type="text" class="form-control" placeholder="Admin name">
                            </div>
                            <div class="mb-3">
                                <label class="form-label fw-bold">Notes</label>
                                <textarea class="form-control" rows="3"></textarea>
                            </div>
                            <div class="d-flex gap-2">
                                <button type="submit" class="btn btn-primary fw-bold">Save Payment</button>
                                <button type="reset" class="btn btn-outline-secondary fw-bold">Clear</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>

            <!-- Payment Details -->
            <div class="col-lg-7">
                <div class="card border-0 shadow h-100">
                    <div class="card-header bg-danger bg-gradient text-white fw-bold">Payment Details</div>
                    <div class="card-body">
                        <div class="table-responsive" style="max-height:500px;">
                            <table class="table table-bordered table-hover align-middle">
                                <thead class="table-primary">
                                    <tr class="fw-bold text-dark text-center">
                                        <th style="width: 5%;">#</th>
                                        <th style="width: 15%;">Payer</th>
                                        <th style="width: 15%;">Invoice</th>
                                        <th style="width: 15%;">Amount</th>
                                        <th style="width: 10%;">Method</th>
                                        <th style="width: 15%;">Ref ID</th>
                                        <th style="width: 10%;">Date</th>
                                        <th style="width: 10%;">Received By</th>
                                        <th style="width: 15%;">Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
