@model Car_Rental_Management.Dtos.StaffDetailDto
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<style>
    :root {
        --primary-color: #076B66;
        --secondary-color: #0D1f23;
        --dark-color: #0d1f23;
        --light-color: #ffffff;
        --card-color: #b3d4d3;
        --highlight-color: #cbf1f0;
    }

    .details-card {
        background-color: var(--card-color);
        padding: 2rem;
        border-radius: 8px;
        box-shadow: 0 0 10px rgba(0,0,0,0.2);
        max-width: 700px;
        margin: 2rem auto;
    }

        .details-card table {
            width: 100%;
            border-collapse: collapse;
        }

        .details-card th, .details-card td {
            padding: 12px 15px;
            border: 1px solid var(--secondary-color);
            text-align: left;
        }

        .details-card th {
            background-color: var(--secondary-color);
            color: var(--light-color);
            width: 35%;
        }

    .btn-back {
        display: inline-block;
        margin-top: 1rem;
        padding: 8px 16px;
        background-color: var(--highlight-color);
        color: var(--secondary-color);
        text-decoration: none;
        border-radius: 6px;
        font-weight: 500;
        transition: background 0.3s;
    }

        .btn-back:hover {
            background-color: var(--secondary-color);
            color: var(--light-color);
        }
</style>

<div class="details-card">
    <h2>Staff Details</h2>

    <table>
        <tr><th>Staff Code</th><td>@Model.StaffCode</td></tr>
        <tr><th>Name</th><td>@Model.Name</td></tr>
        <tr><th>Address</th><td>@Model.Address</td></tr>
        <tr><th>Status</th><td>@Model.Status</td></tr>
        <tr><th>Email</th><td>@Model.EmailAddress</td></tr>
        <tr><th>Phone</th><td>@Model.PhoneNumber</td></tr>
        <tr><th>Role</th><td>@Model.Role</td></tr>
        <tr><th>Salary</th><td>@Model.Salary</td></tr>
        <tr><th>Shift Time</th><td>@Model.ShiftTime</td></tr>
    </table>

    <a asp-action="Index" class="btn-back">Back to List</a>
</div>
