@model List<Car_Rental_Management.viewmodel.Staffviewmodel>

@{
    ViewData["Title"] = "Staff List";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />

<div class="container mt-5">
    <h2 class="mb-4">Staff Directory</h2>

    <table class="table table-bordered table-hover table-striped">
        <thead class="table-dark">
            <tr>
                <th>Name</th>
                <th>Staff Code</th>
                <th>Status</th>
                <th>Shift Time</th>
                <th>Email</th>
                <th>Phone</th>
                <th>Role</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var staff in Model)
            {
                <tr>
                    <td>@staff.Name</td>
                    <td>@staff.StaffCode</td>
                    <td>@staff.Status</td>
                    <td>@staff.ShiftTime.ToString(@"hh\:mm")</td>
                    <td>@staff.EmailAddress</td>
                    <td>@staff.PhoneNumber</td>
                    <td>@staff.Role</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@staff.Id" class="btn btn-sm btn-primary me-1">Edit</a>
                        <a asp-action="Details" asp-route-id="@staff.Id" class="btn btn-sm btn-info me-1">View</a>
                        <a asp-action="Delete" asp-route-id="@staff.Id" class="btn btn-sm btn-danger">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
