@model List<Car_Rental_Management.Dtos.StaffDto>

@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<style>
    :root {
        --primary-color: #076B66;
        --secondary-color: #0D1f23;
        --dark-color: #0d1f23;
        --light-color: #ffffff;
        --card-color: #b3d4d3;
        --highlight-color: #cbf1f0;
    }

    .custom-btn-add {
        display: inline-block;
        padding: 8px 16px;
        background-color: var(--primary-color);
        color: var(--light-color);
        text-decoration: none;
        border-radius: 6px;
        font-weight: 500;
        transition: background 0.3s;
    }

        .custom-btn-add:hover {
            background-color: var(--secondary-color);
            color: var(--light-color);
        }

    .custom-btn-edit {
        display: inline-block;
        padding: 4px 10px;
        background-color: var(--highlight-color);
        color: var(--secondary-color);
        text-decoration: none;
        border-radius: 4px;
        font-weight: 500;
    }

        .custom-btn-edit:hover {
            background-color: var(--secondary-color);
            color: var(--light-color);
        }

    .custom-btn-delete {
        padding: 4px 10px;
        background-color: #e74c3c;
        color: var(--light-color);
        border: none;
        border-radius: 4px;
        font-weight: 500;
        cursor: pointer;
    }

        .custom-btn-delete:hover {
            background-color: #c0392b;
        }

    table {
        width: 100%;
        border-collapse: collapse;
        box-shadow: 0 0 5px rgba(0,0,0,0.2);
    }

    th {
        background-color: var(--secondary-color);
        color: var(--light-color);
        padding: 10px;
        text-align: left;
    }

    td {
        background-color: var(--card-color);
        padding: 8px;
    }

    tr:nth-child(even) td {
        background-color: #d0e3e2; /* slightly different shade */
    }

    .table-actions {
        display: flex;
        gap: 8px;
    }

</style>

<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>Staff List</h2>
        <a asp-action="Create" asp-controller="Staff" class="custom-btn-add">
            Add Staff
        </a>
    </div>

    <table>
        <thead>
            <tr>
                <th>Staff Code</th>
                <th>Name</th>
                <th>Status</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var staff in Model)
            {
                <tr>
                    <td>@staff.StaffCode</td>
                    <td>
                        <a asp-action="Details" asp-route-id="@staff.Id">@staff.Name</a>
                    </td>
                    <td>@staff.Status</td>
                    <td class="table-actions">
                        <a class="custom-btn-edit" asp-action="Edit" asp-route-id="@staff.Id">Edit</a>
                        <form asp-action="Delete" asp-route-id="@staff.Id" method="post" onsubmit="return confirm('Are you sure?');">
                            <button type="submit" class="custom-btn-delete">Delete</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
