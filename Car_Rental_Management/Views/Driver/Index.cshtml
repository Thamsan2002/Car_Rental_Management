@model IEnumerable<Car_Rental_Management.Dtos.DriverDto>

@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
  
}

<style>

    .custom-btn-add {
        display: inline-block;
        padding: 8px 16px;
        background-color: var(--primary-color);
        color: var(--light-color);
        text-decoration: none;
        border-radius: 6px;
        font-weight: 500;
        transition: background 0.3s;
    }

        .custom-btn-add:hover {
            background-color: var(--secondary-color);
            color: var(--light-color);
        }

    .custom-btn-edit {
        display: inline-block;
        padding: 4px 10px;
        background-color: var(--highlight-color);
        color: var(--secondary-color);
        text-decoration: none;
        border-radius: 4px;
        font-weight: 500;
    }

        .custom-btn-edit:hover {
            background-color: var(--secondary-color);
            color: var(--light-color);
        }

    .custom-btn-delete {
        padding: 4px 10px;
        background-color: #e74c3c;
        color: var(--light-color);
        border: none;
        border-radius: 4px;
        font-weight: 500;
        cursor: pointer;
    }

        .custom-btn-delete:hover {
            background-color: #c0392b;
        }

    /* Table styling for theme */
    .table-dark {
        background-color: var(--secondary-color);
        color: var(--light-color);
    }

    .table-striped > tbody > tr:nth-of-type(odd) {
        background-color: var(--card-color);
    }
</style>

<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>Drivers</h2>
        <a asp-action="CreateDriver" asp-controller="Driver" class="custom-btn-add">
            Add Driver
        </a>
    </div>

    @if (TempData["Message"] != null)
    {
        <div class="alert alert-success">@TempData["Message"]</div>
    }

    <table class="table table-bordered table-striped shadow">
        <thead class="table-dark">
            <tr>
                <th>Name</th>
                <th>Email</th>
                <th>Emergency Contact</th>
                <th>NIC</th>
                <th>Gender</th>
                <th>Address</th>
                <th>License Number</th>
                <th>License Expiry</th>
                <th>Experience</th>
                <th>Vehicle Type</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var driver in Model)
            {
                <tr>
                    <input type="hidden" name="Id" value="@driver.Id" />
                    <td>@driver.Name</td>
                    <td>@driver.Email</td>
                    <td>@driver.EmergencyContact</td>
                    <td>@driver.Nic</td>
                    <td>@driver.Gender</td>
                    <td>@driver.Address</td>
                    <td>@driver.LicenseNumber</td>
                    <td>@driver.LicenseExpiryDate.ToShortDateString()</td>
                    <td>@driver.Experience</td>
                    <td>@driver.VehicleType</td>
                    <td class="d-flex gap-2">
                        <!-- Edit Button -->
                        <a class="custom-btn-edit"
                           href="@Url.Action("Edit", "Driver", new { id = driver.Id })">
                            Edit
                        </a>

                        <!-- Delete Button -->
                        <form asp-action="Delete" asp-controller="Driver"
                              method="post" class="d-inline"
                              onsubmit="return confirm('Are you sure you want to delete this driver?');">
                            <input type="hidden" name="id" value="@driver.Id" />
                            <button type="submit" class="custom-btn-delete">Delete</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

