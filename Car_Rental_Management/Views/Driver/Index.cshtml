@model IEnumerable<Car_Rental_Management.Dtos.DriverDto>

@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewData["Title"] = "Driver List";
}

<style>
    :root {
        --primary-color: #076B66;
        --secondary-color: #0D1F23;
        --dark-color: #0d1f23;
        --light-color: #ffffff;
        --card-color: #b3d4d3;
        --highlight-color: #cbf1f0;
    }

    body {
        background-color: var(--highlight-color);
        color: var(--secondary-color);
        font-family: Arial, sans-serif;
    }

    h2 {
        color: var(--primary-color);
        margin-bottom: 20px;
    }

    .card {
        background-color: var(--card-color);
        padding: 20px;
        border-radius: 10px;
        box-shadow: 0 4px 6px rgba(0,0,0,0.1);
        margin-bottom: 20px;
    }

    .btn-add {
        background-color: var(--primary-color);
        color: var(--light-color);
        border: none;
        border-radius: 6px;
        padding: 6px 14px;
        font-weight: 600;
        text-decoration: none;
        transition: 0.3s;
    }

        .btn-add:hover {
            background-color: var(--dark-color);
        }

    .btn-edit {
        background-color: var(--highlight-color);
        color: var(--secondary-color);
        border: none;
        border-radius: 5px;
        padding: 4px 10px;
        font-size: 0.9rem;
        font-weight: 500;
        transition: 0.3s;
    }

        .btn-edit:hover {
            background-color: var(--secondary-color);
            color: var(--light-color);
            transform: scale(1.05);
        }

    .btn-delete {
        background-color: #d9534f;
        color: var(--light-color);
        border: none;
        border-radius: 5px;
        padding: 4px 10px;
        font-size: 0.9rem;
        font-weight: 500;
        cursor: pointer;
        transition: 0.3s;
    }

        .btn-delete:hover {
            background-color: #c0392b;
            transform: scale(1.05);
        }

    .table thead {
        background-color: var(--secondary-color);
        color: var(--light-color);
    }

    .table tbody tr:hover {
        background-color: var(--highlight-color);
        transition: 0.3s;
    }
</style>

<div class="card">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2>Drivers</h2>
        <a asp-action="CreateDriver" asp-controller="Driver" class="btn-add">+ Add Driver</a>
    </div>

    @if (TempData["Message"] != null)
    {
        <div class="alert alert-success">@TempData["Message"]</div>
    }

    <div style="overflow-x:auto;">
        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Email</th>
                    <th>Emergency Contact</th>
                    <th>NIC</th>
                    <th>Gender</th>
                    <th>Address</th>
                    <th>License Number</th>
                    <th>License Expiry</th>
                    <th>Experience</th>
                    <th>Vehicle Type</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var driver in Model)
                {
                    <tr>
                        <td>@driver.Name</td>
                        <td>@driver.Email</td>
                        <td>@driver.EmergencyContact</td>
                        <td>@driver.Nic</td>
                        <td>@driver.Gender</td>
                        <td>@driver.Address</td>
                        <td>@driver.LicenseNumber</td>
                        <td>@driver.LicenseExpiryDate.ToShortDateString()</td>
                        <td>@driver.Experience</td>
                        <td>@driver.VehicleType</td>
                        <td class="d-flex gap-2">
                            <a class="btn-edit" href="@Url.Action("Edit", "Driver", new { id = driver.Id })">Edit</a>
                            <form asp-action="Delete" asp-controller="Driver" method="post" onsubmit="return confirm('Are you sure you want to delete this driver?');">
                                <input type="hidden" name="id" value="@driver.Id" />
                                <button type="submit" class="btn-delete">Delete</button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
