@model IEnumerable<Car_Rental_Management.Dtos.DriverDto>
@{
    ViewData["Title"] = "Drivers List";
}

<div class="container mt-5">
    <h2 class="mb-4">Drivers</h2>

    @if (TempData["Message"] != null)
    {
        <div class="alert alert-success">@TempData["Message"]</div>
    }

    <table class="table table-bordered table-striped shadow">
        <thead class="table-dark">
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Email</th>
                <th>Emergency Contact</th>
                <th>NIC</th>
                <th>Gender</th>
                <th>Address</th>
                <th>License Number</th>
                <th>License Expiry</th>
                <th>Experience</th>
                <th>Vehicle Type</th>
                <th>Actions</th> <!-- New column for buttons -->
            </tr>
        </thead>
        <tbody>
            @foreach (var driver in Model)
            {
                <tr>
                    <td>@driver.Id</td>
                    <td>@driver.Name</td>
                    <td>@driver.Email</td>
                    <td>@driver.EmergencyContact</td>
                    <td>@driver.Nic</td>
                    <td>@driver.Gender</td>
                    <td>@driver.Address</td>
                    <td>@driver.LicenseNumber</td>
                    <td>@driver.LicenseExpiryDate.ToShortDateString()</td>
                    <td>@driver.Experience</td>
                    <td>@driver.VehicleType</td>
                    <td>
                        <!-- Edit Button -->
                        <a class="btn btn-sm btn-primary"
                           href="@Url.Action("Edit", "Driver", new { id = driver.Id })">
                            Edit
                        </a>

                        <!-- Delete Button -->
                        <form asp-action="Delete" asp-controller="Driver"
                              method="post" class="d-inline"
                              onsubmit="return confirm('Are you sure you want to delete this driver?');">
                            <input type="hidden" name="id" value="@driver.Id" />
                            <button type="submit" class="btn btn-sm btn-danger">Delete</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
