@model Car_Rental_Management.ViewModel.CarViewModel
@{
    ViewData["Title"] = "Add Car";
}


<form asp-action="AddCar" asp-controller="AddCar" method="post" enctype="multipart/form-data">
    <div class="row g-3">

        <!-- Basic details -->
        <div class="col-md-4">
            <label asp-for="Make" class="form-label"></label>
            <input asp-for="Make" class="form-control" placeholder="Toyota, Honda..." />
            <span asp-validation-for="Make" class="text-danger"></span>

        </div>


        <div class="col-md-4">
            <label asp-for="Model" class="form-label"></label>
            <input asp-for="Model" class="form-control" placeholder="Corolla, Civic..." />
        </div>

        <div class="col-md-2">
            <label asp-for="Year" class="form-label"></label>
            <input asp-for="Year" class="form-control" type="number" min="1900" max="2099" />
        </div>

        <div class="col-md-2">
            <label asp-for="Plate" class="form-label"></label>
            <input asp-for="Plate" class="form-control" placeholder="ABC-1234" />
        </div>

        <!-- Specs -->
        <div class="col-md-3">
            <label asp-for="Seats" class="form-label"></label>
            <input asp-for="Seats" class="form-control" type="number" min="1" />
        </div>

        <div class="col-md-3">
            <label asp-for="Transmission" class="form-label"></label>
            <select asp-for="Transmission" class="form-select">
                <option value="">-- Select --</option>
                <option>Automatic</option>
                <option>Manual</option>
                <option>CVT</option>
            </select>
        </div>

        <div class="col-md-3">
            <label asp-for="Fuel" class="form-label"></label>
            <select asp-for="Fuel" class="form-select">
                <option>Petrol</option>
                <option>Diesel</option>
                <option>Hybrid</option>
                <option>Electric</option>
            </select>
        </div>

        <div class="col-md-3">
            <label asp-for="Mileage" class="form-label"></label>
            <input asp-for="Mileage" class="form-control" />
        </div>

        <!-- Pricing & availability -->
        <div class="col-md-4">
            <label asp-for="Price" class="form-label"></label>
            <input asp-for="Price" class="form-control" type="number" step="0.01" />
        </div>

        <div class="col-md-4">
            <label asp-for="Available" class="form-label"></label>
            <select asp-for="Available" class="form-select">
                <!-- ✅ Use true/false instead of yes/no -->
                <option value="true">Yes</option>
                <option value="false">No</option>
            </select>
        </div>

        <div class="col-md-4">
            <label asp-for="Color" class="form-label"></label>
            <input asp-for="Color" class="form-control" placeholder="White / Black" />
        </div>

        <!-- Description -->
        <div class="col-12">
            <label asp-for="Description" class="form-label"></label>
            <textarea asp-for="Description" class="form-control" rows="3" placeholder="Enter car details..."></textarea>
        </div>

        <!-- Images upload -->
        <div class="col-md-6">
            <label asp-for="Images" class="form-label">Car Photos (Multiple)</label>
            <input asp-for="Images" class="form-control" type="file" multiple />
            <div class="form-text">Upload multiple images.</div>
        </div>
        <!-- Submit -->
        <div class="col-12 d-flex justify-content-end">
            <button type="reset" class="btn btn-outline-secondary me-2">Reset</button>
            <button type="submit" class="btn btn-primary">Save Car</button>
        </div>
    </div>
</form>
