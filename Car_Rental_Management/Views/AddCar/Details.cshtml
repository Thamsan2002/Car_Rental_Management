@model IEnumerable<Car_Rental_Management.ViewModel.CarViewModel>

@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewData["Title"] = "Car Inventory";
}

<style>
    :root {
        --primary-color: #076B66;
        --secondary-color: #0D1f23;
        --dark-color: #0d1f23;
        --light-color: #ffffff;
        --card-color: #b3d4d3;
        --highlight-color: #cbf1f0;
    }

    body {
        background-color: var(--highlight-color);
        color: var(--secondary-color);
        font-family: Arial, sans-serif;
    }

    h2 {
        color: var(--primary-color);
        margin-bottom: 20px;
    }

    .btn-primary {
        background-color: var(--primary-color);
        border: none;
    }

        .btn-primary:hover {
            background-color: var(--dark-color);
        }

    .table thead {
        background-color: var(--secondary-color);
        color: var(--light-color);
    }

    .table tbody tr:hover {
        background-color: var(--card-color);
        transition: 0.3s;
    }

    .btn-warning {
        background-color: #f0ad4e;
        border: none;
    }

    .btn-danger {
        background-color: #d9534f;
        border: none;
    }

    .alert {
        border-radius: 5px;
    }

    .card {
        background-color: var(--card-color);
        padding: 15px;
        border-radius: 10px;
        box-shadow: 0 4px 6px rgba(0,0,0,0.1);
        margin-bottom: 20px;
    }
</style>

<div class="card">
    <h2>Car Inventory</h2>

    <!-- Success/Error Messages -->
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success">@TempData["SuccessMessage"]</div>
    }
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
    }

    <!-- Add Car Button -->
    <p>
        <a class="btn btn-primary" asp-action="AddCar">Add New Car</a>
    </p>

    <!-- Cars Table -->
    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>Model</th>
                <th>Brand</th>
                <th>Status</th>
                <th>Year</th>
                <th>Price/Day</th>
                <th>Seats</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Any())
            {
                foreach (var car in Model)
                {
                    <tr>
                        <td>@car.Model</td>
                        <td>@car.Make</td>
                        <td>@(car.Available ? "Available" : "Not Available")</td>
                        <td>@car.Year</td>
                        <td>@(car.Price.HasValue? car.Price.Value.ToString("C") : "-")</td>
                        <td>@car.Seats</td>
                        <td>
                            <a class="btn btn-sm btn-warning" asp-action="Edit" asp-route-id="@car.Id">Edit</a>
                            <form asp-action="Delete" asp-route-id="@car.Id" method="post" style="display:inline;">
                                <button type="submit" class="btn btn-sm btn-danger" onclick="return confirm('Are you sure to delete this car?');">Delete</button>
                            </form>
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="7" class="text-center">No cars found.</td>
                </tr>
            }
        </tbody>
    </table>
</div>
