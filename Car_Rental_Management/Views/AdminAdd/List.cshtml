@model List<Car_Rental_Management.Dtos.AdminDto>

@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewData["Title"] = "Admin List";
}

<style>
    :root {
        --primary-color: #076B66;
        --secondary-color: #0D1f23;
        --dark-color: #0d1f23;
        --light-color: #ffffff;
        --card-color: #b3d4d3;
        --highlight-color: #cbf1f0;
    }

    body {
        background-color: var(--highlight-color);
        color: var(--secondary-color);
        font-family: Arial, sans-serif;
    }

    h2 {
        color: var(--primary-color);
        margin-bottom: 20px;
    }

    .btn-primary {
        background-color: var(--primary-color);
        color: var(--light-color);
        border: none;
        border-radius: 5px;
        padding: 6px 14px;
        transition: 0.3s;
        text-decoration: none;
        display: inline-block;
    }

        .btn-primary:hover {
            background-color: var(--dark-color);
        }

    .btn-edit {
        background-color: #27ae60;
        color: var(--light-color);
        border: none;
        border-radius: 5px;
        padding: 4px 10px;
        font-size: 0.9rem;
        transition: 0.3s;
    }

        .btn-edit:hover {
            background-color: #1e874b;
        }

    .btn-delete {
        background-color: #d9534f;
        color: var(--light-color);
        border: none;
        border-radius: 5px;
        padding: 4px 10px;
        font-size: 0.9rem;
        transition: 0.3s;
    }

        .btn-delete:hover {
            background-color: #c0392b;
        }

    .card {
        background-color: var(--card-color);
        padding: 20px;
        border-radius: 10px;
        box-shadow: 0 4px 6px rgba(0,0,0,0.1);
        margin-bottom: 20px;
    }

    .table thead {
        background-color: var(--secondary-color);
        color: var(--light-color);
    }

    .table tbody tr:hover {
        background-color: var(--highlight-color);
        transition: 0.3s;
    }
</style>

<div class="card">
    <h2>Admin List</h2>

    <p>
        <a class="btn btn-primary" asp-action="Add">+ Add Admin</a>
    </p>

    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>Name</th>
                <th>Address</th>
                <th>Email</th>
                <th>Phone</th>
                <th>Role</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Any())
            {
                foreach (var admin in Model)
                {
                    <tr>
                        <td>@admin.Name</td>
                        <td>@admin.Address</td>
                        <td>@admin.Email</td>
                        <td>@admin.PhoneNumber</td>
                        <td>@admin.Role</td>
                        <td>
                            <a class="btn btn-edit" asp-action="Edit" asp-route-id="@admin.Id">Edit</a>
                            <form asp-action="Delete" asp-route-id="@admin.Id" method="post" style="display:inline;">
                                <button type="submit" class="btn btn-delete"
                                        onclick="return confirm('Are you sure you want to delete this admin?');">
                                    Delete
                                </button>
                            </form>
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="6" class="text-center">No admins found.</td>
                </tr>
            }
        </tbody>
    </table>
</div>
