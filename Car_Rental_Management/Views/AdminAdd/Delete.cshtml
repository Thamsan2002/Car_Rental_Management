@model List<Car_Rental_Management.Dtos.AdminDto>

<h2 class="mb-4">Admin List</h2>

<table class="table table-striped table-bordered table-hover">
    <thead class="table-dark">
        <tr>
            <th>Name</th>
            <th>Address</th>
            <th>Email</th>
            <th>Phone</th>
            <th>Role</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var admin in Model)
        {
            <tr>
                <td>@admin.Name</td>
                <td>@admin.Address</td>
                <td>@admin.Email</td>
                <td>@admin.PhoneNumber</td>
                <td>@admin.Role</td>
                <td>
                    <!-- Edit Button -->
                    <a asp-action="Edit" asp-route-id="@admin.Id" class="btn btn-primary btn-sm me-1">
                        Edit
                    </a>

                    <!-- Delete Button -->
                    <form asp-action="Delete" asp-route-id="@admin.Id" method="post" style="display:inline;">
                        <button type="submit" class="btn btn-danger btn-sm"
                                onclick="return confirm('Are you sure you want to delete this admin?');">
                            Delete
                        </button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
