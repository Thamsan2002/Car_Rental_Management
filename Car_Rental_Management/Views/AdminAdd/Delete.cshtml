@model List<Car_Rental_Management.Dtos.AdminDto>
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2 class="page-title">Admin List</h2>

<table class="custom-table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Address</th>
            <th>Email</th>
            <th>Phone</th>
            <th>Role</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var admin in Model)
        {
            <tr>
                <td>@admin.Name</td>
                <td>@admin.Address</td>
                <td>@admin.Email</td>
                <td>@admin.PhoneNumber</td>
                <td><span class="badge">@admin.Role</span></td>
                <td>
                    <!-- Edit Button -->
                    <a asp-action="Edit" asp-route-id="@admin.Id" class="btn btn-edit">
                        Edit
                    </a>

                    <!-- Delete Button -->
                    <form asp-action="Delete" asp-route-id="@admin.Id" method="post" style="display:inline;">
                        <button type="submit" class="btn btn-delete"
                                onclick="return confirm('Are you sure you want to delete this admin?');">
                            Delete
                        </button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
