@model Car_Rental_Management.ViewModel.CustomerRegisterViewModel
@{
    ViewData["Title"] = "My Profile";
}

<!-- Bootstrap Icons CDN -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white text-center">
                    <h3 class="mb-0">My Profile</h3>
                </div>
                <div class="card-body text-center">
                    <!-- Avatar Icon using Bootstrap Icon -->
                    <div class="profile-avatar mb-3">
                        <i class="bi bi-person-circle" style="font-size: 6rem; width: 25%; display: inline-block; color:#0d6efd;"></i>
                    </div>

                    <h4 class="card-title">@Model.FullName</h4>
                    <p><strong>User ID:</strong> @Model.UserId</p>
                    <p><strong>Address:</strong> @Model.Address</p>
                </div>
                <div class="card-footer text-center">
                    <a asp-action="Index" asp-controller="Home" class="btn btn-primary">Back to Home</a>
                </div>
            </div>
        </div>
    </div>
</div>
