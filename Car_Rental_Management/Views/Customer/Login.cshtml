@model Car_Rental_Management.ViewModel.CustomerLoginViewModel

@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_CustomerLayout.cshtml";
}
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" />

<style>
    body {
        background-color: #FFFFFF; /* changed to white */
        color: #0D1F23; /* main text color dark */
        font-family: Arial, sans-serif;
    }

    .card {
        background-color: #132E35; /* dark card */
        border: 1px solid #2D4A50;
        color: #FFFFFF;
        border-radius: 15px;
        box-shadow: 0 8px 32px rgba(0,0,0,0.15);
    }

    .card-title {
        color: #FFFFFF;
        text-align: center;
        font-weight: 600;
    }

    .form-label {
        color: #FFFFFF;
        font-weight: 500;
    }

    .form-control {
        background-color: #2D4A50;
        color: #FFFFFF;
        border: 1px solid #5A636A;
        border-radius: 10px;
    }

        .form-control::placeholder {
            color: #AFB3B7;
            opacity: 1;
        }

        .form-control:focus {
            background-color: #2D4A50;
            color: #FFFFFF;
            border-color: #698180;
            box-shadow: 0 0 10px #698180;
            outline: none;
        }

    .btn-primary {
        background-color: #698180;
        border-color: #698180;
        color: #FFFFFF;
        font-weight: bold;
        border-radius: 10px;
        transition: all 0.3s ease;
    }

        .btn-primary:hover {
            background-color: #5A636A;
            border-color: #5A636A;
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(0,0,0,0.3);
        }

    .btn-outline-secondary {
        color: #132E35; /* dark text for white background */
        border-color: #5A636A;
    }

        .btn-outline-secondary:hover {
            background-color: #5A636A;
            border-color: #698180;
            color: #FFFFFF;
        }

    .text-danger {
        color: #FF6B6B; /* keep error visible */
    }

    a {
        text-decoration: none;
    }

        a:hover {
            color: #698180;
            text-decoration: none;
        }
</style>

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-5">
            <div class="card shadow-sm">
                <div class="card-body p-4">
                    <h3 class="card-title mb-3">Sign In</h3>

                    <form asp-action="Login" method="post" novalidate>
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <div class="mb-3">
                            <label asp-for="EmailOrPhone" class="form-label"></label>
                            <input asp-for="EmailOrPhone" class="form-control" placeholder="Enter email or phone" />
                            <span asp-validation-for="EmailOrPhone" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Password" class="form-label"></label>
                            <input asp-for="Password" class="form-control" type="password" placeholder="Enter password" />
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>

                        <div class="form-check mb-3">
                            <input asp-for="RememberMe" class="form-check-input" />
                            <label asp-for="RememberMe" class="form-check-label"></label>
                            <span asp-validation-for="RememberMe" class="text-danger"></span>
                        </div>

                        <button type="submit" class="btn btn-primary w-100">Login</button>

                        <div class="text-center mt-2">
                            <a asp-controller="Customer" asp-action="SignUp" class="btn btn-outline-secondary w-100">
                                Haven't account? SignUp
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

