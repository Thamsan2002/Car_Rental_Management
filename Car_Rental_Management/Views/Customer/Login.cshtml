@model Car_Rental_Management.ViewModel.CustomerLoginViewModel

@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_CustomerLayout.cshtml";
}
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" />

<style>
    /* Card glass effect */
    .card {
        background: rgba(255, 255, 255, 0.1);
        border-radius: 15px;
        border: 1px solid rgba(255, 255, 255, 0.2);
        backdrop-filter: blur(10px);
        -webkit-backdrop-filter: blur(10px);
        box-shadow: 0 8px 32px rgba(0, 0, 0, 0.25);
        color: #FFFFFF;
    }

    /* Card title */
    .card-title {
        color: #FFFFFF; /* White color */
        text-align: center;
        font-weight: 900; /* Extra bold */
        font-size: 1.8rem; /* Large font size */
    }

    /* Form labels */
    .form-label {
        color: #FFFFFF;
        font-weight: 500;
    }

    /* Inputs */
    .form-control {
        background-color: rgba(255, 255, 255, 0.1);
        color: #FFFFFF;
        border: 1px solid rgba(255, 255, 255, 0.2);
        border-radius: 10px;
    }

        .form-control::placeholder {
            color: #AFB3B7;
            opacity: 1;
        }

        .form-control:focus {
            background-color: rgba(255, 255, 255, 0.15);
            border-color: rgba(255, 255, 255, 0.3);
            box-shadow: 0 0 10px rgba(255, 255, 255, 0.2);
            outline: none;
        }

    /* Buttons */
    .btn-primary {
        background-color: rgba(105, 129, 128, 0.8);
        border-color: rgba(105, 129, 128, 0.8);
        color: #FFFFFF;
        font-weight: bold;
        border-radius: 10px;
        transition: all 0.3s ease;
    }

        .btn-primary:hover {
            background-color: rgba(90, 99, 106, 0.8);
            border-color: rgba(90, 99, 106, 0.8);
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(0,0,0,0.3);
        }

    .btn-outline-secondary {
        color: #FFFFFF;
        border-color: rgba(255, 255, 255, 0.3);
    }

        .btn-outline-secondary:hover {
            background-color: rgba(90, 99, 106, 0.4);
            border-color: rgba(105, 129, 128, 0.5);
            color: #FFFFFF;
        }

    .text-danger {
        color: #FF6B6B;
    }

    a {
        text-decoration: none;
        color: #FFFFFF;
    }

        a:hover {
            color: #698180;
            text-decoration: none;
        }

    /* Remember Me checkbox */
    .form-check-input {
        width: 18px;
        height: 18px;
        border-radius: 4px;
        border: 1px solid #FFFFFF;
        background-color: rgba(255, 255, 255, 0.1);
        cursor: pointer;
    }

        .form-check-input:checked {
            background-color: #698180; /* tick color */
            border-color: #698180;
        }

    .form-check-label {
        color: #FFFFFF;
        font-weight: 500;
        margin-left: 5px;
    }
</style>

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-5">
            <div class="card shadow-sm">
                <div class="card-body p-4">
                    <h3 class="card-title mb-3">Sign In</h3>
                    


                    <form asp-action="Login" method="post" novalidate>
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <div class="mb-3">
                            <label asp-for="EmailOrPhone" class="form-label"></label>
                            <input asp-for="EmailOrPhone" class="form-control" placeholder="Enter email or phone" />
                            <span asp-validation-for="EmailOrPhone" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Password" class="form-label"></label>
                            <input asp-for="Password" class="form-control" type="password" placeholder="Enter password" />
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>

                        <div class="form-check mb-3">
                            <input asp-for="RememberMe" class="form-check-input" />
                            <label asp-for="RememberMe" class="form-check-label">Remember Me</label>
                            <span asp-validation-for="RememberMe" class="text-danger"></span>
                        </div>

                        <button type="submit" class="btn btn-primary w-100">Login</button>

                        <div class="text-center mt-2">
                            <a asp-controller="Customer" asp-action="SignUp" class="btn btn-outline-secondary w-100">
                                Haven't account? SignUp
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
