@model Car_Rental_Management.ViewModel.CustomerSignupViewmodel
@{
    Layout = "~/Views/Shared/_CustomerLayout.cshtml";
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" />

<style>
    html, body {
        height: 100%;
        margin: 0;
    }

    body {
        display: flex;
        justify-content: center; /* horizontal center */
        align-items: center; /* vertical center */
     
        background-size: cover;
        font-family: Arial, sans-serif;
    }

    /* Glass card style */
    .card {
        background: rgba(255, 255, 255, 0.1); /* semi-transparent */
        border-radius: 15px;
        border: 1px solid rgba(255, 255, 255, 0.2);
        backdrop-filter: blur(10px);
        -webkit-backdrop-filter: blur(10px);
        box-shadow: 0 8px 32px rgba(0, 0, 0, 0.25);
        color: #FFFFFF;
        max-width: 450px;
        width: 100%;
    }

    .card-title {
        color: #FFFFFF;
        text-align: center;
        font-weight: 700; /* bold */
        font-size: 1.8rem;
    }

    .form-label {
        color: #FFFFFF;
        font-weight: 500;
    }

    .form-control {
        background-color: rgba(255, 255, 255, 0.1);
        color: #FFFFFF;
        border: 1px solid rgba(255, 255, 255, 0.2);
        border-radius: 10px;
    }

        .form-control::placeholder {
            color: #AFB3B7;
            opacity: 1;
        }

        .form-control:focus {
            background-color: rgba(255, 255, 255, 0.15);
            border-color: rgba(255, 255, 255, 0.3);
            box-shadow: 0 0 10px rgba(255, 255, 255, 0.2);
            outline: none;
        }

    .btn-primary {
        background-color: rgba(105, 129, 128, 0.8);
        border-color: rgba(105, 129, 128, 0.8);
        color: #FFFFFF;
        font-weight: bold;
        border-radius: 10px;
        transition: all 0.3s ease;
    }

        .btn-primary:hover {
            background-color: rgba(90, 99, 106, 0.8);
            border-color: rgba(90, 99, 106, 0.8);
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(0,0,0,0.3);
        }

    .btn-outline-secondary {
        color: #FFFFFF;
        border-color: rgba(255, 255, 255, 0.3);
    }

        .btn-outline-secondary:hover {
            background-color: rgba(90, 99, 106, 0.4);
            border-color: rgba(105, 129, 128, 0.5);
            color: #FFFFFF;
        }

    .text-danger {
        color: #FF6B6B;
    }

    a {
        text-decoration: none;
        color: #FFFFFF;
    }

        a:hover {
            color: #698180;
            text-decoration: none;
        }
</style>

<div class="card shadow-sm">
    <div class="card-body p-4">
        <h3 class="card-title mb-3">Create Account</h3>

        <form asp-action="SignUp" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="mb-3">
                <label asp-for="Email" class="form-label"></label>
                <input asp-for="Email" class="form-control" placeholder="Enter your email" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="PhoneNumber" class="form-label"></label>
                <input asp-for="PhoneNumber" class="form-control" placeholder="Enter phone number" />
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Password" class="form-label"></label>
                <input asp-for="Password" class="form-control" type="password" placeholder="Enter password" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="ConfirmPassword" class="form-label"></label>
                <input asp-for="ConfirmPassword" class="form-control" type="password" placeholder="Confirm password" />
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-primary w-100">Sign Up</button>

            <div class="text-center mt-2">
                <a asp-controller="Customer" asp-action="Login" class="btn btn-outline-secondary w-100">
                    Already have an account? Login
                </a>
            </div>
        </form>
    </div>
</div>
