@model Car_Rental_Management.ViewModel.CustomerRegisterViewModel
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<style>
     body {
        background: #076B66; /* solid green background */
         font-family: Arial, sans-serif;
         margin: 0;
         padding: 30px;
     }

     .form-container {
         max-width: 700px;
         margin: 30px auto;
         background: rgba(255, 255, 255, 0.25); /* transparent white glass */
         padding: 25px;
         border-radius: 15px;
         box-shadow: 0 8px 32px rgba(0,0,0,0.25);
         backdrop-filter: blur(12px);
         -webkit-backdrop-filter: blur(12px);
         border: 1px solid rgba(255, 255, 255, 0.3);
         color: #000; /* font black */
     }

     .form-header {
         background: rgba(255, 255, 255, 0.3);
         padding: 15px;
         border-radius: 12px;
         text-align: center;
         font-size: 20px;
         font-weight: bold;
         color: #000; /* header text black */
     }

     .form-group {
         margin-bottom: 15px;
     }

     label {
         display: block;
         font-weight: bold;
         margin-bottom: 6px;
         color: #000; /* label black */
     }

     input, select, textarea {
         width: 100%;
         padding: 10px;
         border: 1px solid rgba(0,0,0,0.3);
         border-radius: 8px;
         font-size: 15px;
         background: rgba(255, 255, 255, 0.6); /* semi-transparent input */
         color: #000; /* black text inside */
         outline: none;
     }

         input::placeholder, textarea::placeholder {
             color: rgba(0,0,0,0.6); /* grey placeholder */
         }

     textarea {
         resize: vertical;
     }

     .btn-save {
         background: rgba(39, 174, 96, 0.8);
         border: none;
         padding: 12px;
         font-size: 16px;
         border-radius: 8px;
         cursor: pointer;
         width: 100%;
         transition: all 0.3s;
         color: #fff; /* button text white */
         font-weight: bold;
     }

         .btn-save:hover {
             background: rgba(33, 145, 80, 0.9);
             transform: translateY(-2px);
             box-shadow: 0 5px 15px rgba(0,0,0,0.3);
         }

     .text-danger {
         color: #FF0000;
     }
</style>

<div class="form-container">
    <div class="form-header">
        <h2>Create Customer</h2>
    </div>
    <form method="post">
        <div asp-validation-summary="All" class="text-danger"></div>

        <div class="form-group">
            <label asp-for="FullName"></label>
            <input asp-for="FullName" placeholder="Enter full name" />
            <span asp-validation-for="FullName" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Gender"></label>
            <select asp-for="Gender">
                <option value="">-- Select Gender --</option>
                <option>Male</option>
                <option>Female</option>
            </select>
            <span asp-validation-for="Gender" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="NationalIdentityCard"></label>
            <input asp-for="NationalIdentityCard" placeholder="Enter NIC" />
            <span asp-validation-for="NationalIdentityCard" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="DrivingLicenseNumber"></label>
            <input asp-for="DrivingLicenseNumber" placeholder="Enter driving license number" />
            <span asp-validation-for="DrivingLicenseNumber" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Phonenumber"></label>
            <input asp-for="Phonenumber" placeholder="Enter phone number" />
            <span asp-validation-for="Phonenumber" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Address"></label>
            <textarea asp-for="Address" placeholder="Enter address"></textarea>
            <span asp-validation-for="Address" class="text-danger"></span>
        </div>

        <button type="submit" class="btn-save">Save</button>
    </form>
</div>