@{
    Layout = "_Login";
}

<style>
    body {
        background: linear-gradient(135deg, #0d1b2a, #1b263b, #0d47a1);
        color: #ffffff;
        min-height: 100vh;
    }

    .card {
        background-color: #112240;
        color: #ffffff;
        border-radius: 20px;
    }

    .form-label {
        color: #ffffff;
        font-weight: 500;
    }

    .form-control, .form-select {
        background-color: #1e3a5f;
        border: 1px solid #0d6efd;
        color: #ffffff;
    }

        .form-control:focus, .form-select:focus {
            background-color: #243b67;
            border-color: #00b4d8;
            color: #ffffff;
            box-shadow: 0 0 10px rgba(0,180,216,0.6);
        }

    .btn-primary {
        background-color: #0d6efd;
        border: none;
        font-weight: bold;
    }

        .btn-primary:hover {
            background-color: #0b5ed7;
        }

    .btn-outline-primary {
        border-color: #00b4d8;
        color: #00b4d8;
    }

        .btn-outline-primary:hover {
            background-color: #00b4d8;
            color: #ffffff;
        }
</style>

<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-5">
            <div class="card shadow-lg border-0">
                <div class="card-body p-4">
                    <h2 class="text-center mb-4">Customer Sign In</h2>

                    <form asp-action="SignIn" asp-controller="Customer" method="post">
                        <!-- Sign In Option -->
                        <div class="mb-3">
                            <label for="signinType" class="form-label">Choose Sign In Option</label>
                            <select class="form-select" id="signinType" name="signinType" required>
                                <option value="email" selected>Email</option>
                                <option value="phone">Phone</option>
                            </select>
                        </div>

                        <!-- Email Fields -->
                        <div id="emailForm">
                            <div class="mb-3">
                                <label for="email" class="form-label">Email Address</label>
                                <input type="email" class="form-control" id="email" name="email">
                            </div>
                            <div class="mb-3">
                                <label for="emailPassword" class="form-label">Password</label>
                                <input type="password" class="form-control" id="emailPassword" name="emailPassword">
                            </div>
                        </div>

                        <!-- Phone Fields -->
                        <div id="phoneForm" style="display:none;">
                            <div class="mb-3">
                                <label for="phone" class="form-label">Phone Number</label>
                                <input type="tel" class="form-control" id="phone" name="phone">
                            </div>
                            <div class="mb-3">
                                <label for="phonePassword" class="form-label">Password</label>
                                <input type="password" class="form-control" id="phonePassword" name="phonePassword">
                            </div>
                        </div>

                        <!-- Submit Button -->
                        <div class="d-grid mt-3">
                            <button type="submit" class="btn btn-primary btn-lg">Sign In</button>
                        </div>
                    </form>

                    <!-- Back Button -->
                    <div class="d-grid mt-3">
                        <a class="btn btn-outline-primary" asp-action="Index" asp-controller="Home">Back</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    const signinType = document.getElementById('signinType');
    const emailForm = document.getElementById('emailForm');
    const phoneForm = document.getElementById('phoneForm');

    signinType.addEventListener('change', function () {
        if (this.value === 'email') {
            emailForm.style.display = 'block';
            phoneForm.style.display = 'none';
        } else {
            emailForm.style.display = 'none';
            phoneForm.style.display = 'block';
        }
    });
</script>
