<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Car Booking Form</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background-color: #f4f6f9;
        }

        .card {
            border-radius: 15px;
            transition: transform 0.3s, box-shadow 0.3s;
        }

            .card:hover {
                transform: translateY(-5px);
                box-shadow: 0 10px 25px rgba(0,0,0,0.2);
            }

        .form-header {
            background: linear-gradient(90deg, #0d6efd, #6f42c1);
            color: white;
            font-weight: bold;
            border-radius: 15px 15px 0 0;
        }

        .btn-gradient {
            background: linear-gradient(90deg, #0d6efd, #6f42c1);
            color: white;
            font-weight: bold;
            transition: background 0.3s, transform 0.2s;
        }

            .btn-gradient:hover {
                background: linear-gradient(90deg, #6f42c1, #0d6efd);
                transform: translateY(-2px);
            }

        .form-control:focus, .form-select:focus {
            box-shadow: 0 0 0 0.2rem rgba(13,110,253,0.25);
            border-color: #0d6efd;
        }

        .text-purple {
            color: #6f42c1 !important;
        }
    </style>
</head>
<body>

    <div class="container mt-5">
        <div class="card shadow p-4 border-0">
            <div class="card-header form-header text-center p-3">
                Car Booking Form
            </div>
            <div class="card-body p-4">

                <!-- Driver Selection -->
                <div class="mb-4">
                    <label class="form-label fw-bold">Select Option</label><br>
                    <div class="form-check form-check-inline">
                        <input class="form-check-input" type="radio" name="driveOption" id="ownDrive" onclick="toggleForms()" checked>
                        <label class="form-check-label text-primary fw-semibold" for="ownDrive">Own Drive</label>
                    </div>
                    <div class="form-check form-check-inline">
                        <input class="form-check-input" type="radio" name="driveOption" id="withDriver" onclick="toggleForms()">
                        <label class="form-check-label text-purple fw-semibold" for="withDriver">With Driver</label>
                    </div>
                </div>

                <!-- Own Drive Form -->
                <div id="ownDriveForm">
                    <div class="mb-3">
                        <label class="form-label fw-semibold">Full Name</label>
                        <input type="text" class="form-control" placeholder="Enter Full Name">
                    </div>
                    <div class="mb-3">
                        <label class="form-label fw-semibold">Email Address</label>
                        <input type="email" class="form-control" placeholder="Enter Email">
                    </div>
                    <div class="mb-3">
                        <label class="form-label fw-semibold">Contact Number</label>
                        <input type="tel" class="form-control" placeholder="Enter Contact Number">
                    </div>
                    <div class="mb-3">
                        <label class="form-label fw-semibold">Car Type</label>
                        <select class="form-select">
                            <option value="">-- Select Car --</option>
                            <option>Sedan</option>
                            <option>SUV</option>
                            <option>Hatchback</option>
                            <option>Luxury</option>
                        </select>
                    </div>

                    <!-- Start Date & Time -->
                    <div class="row mb-3">
                        <div class="col-md-6">
                            <label class="form-label">Start Date</label>
                            <input type="date" class="form-control">
                        </div>
                        <div class="col-md-6">
                            <label class="form-label">Start Time</label>
                            <input type="time" class="form-control">
                        </div>
                    </div>

                    <!-- End Date & Time -->
                    <div class="row mb-3">
                        <div class="col-md-6">
                            <label class="form-label">End Date</label>
                            <input type="date" class="form-control">
                        </div>
                        <div class="col-md-6">
                            <label class="form-label">End Time</label>
                            <input type="time" class="form-control">
                        </div>
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Duration (Hours/Days)</label>
                        <input type="number" class="form-control" placeholder="Enter duration">
                    </div>
                    <div class="mb-3">
                        <label class="form-label fw-semibold">Payment Method</label>
                        <select class="form-select">
                            <option value="">-- Select Payment Method --</option>
                            <option>Cash</option>
                            <option>Credit/Debit Card</option>
                            <option>Online Payment</option>
                        </select>
                    </div>
                </div>


                <!-- With Driver Form -->
                <div id="withDriverForm" style="display:none;">
                    <div class="mb-3">
                        <label class="form-label fw-semibold">Full Name</label>
                        <input type="text" class="form-control" placeholder="Enter Full Name">
                    </div>
                    <div class="mb-3">
                        <label class="form-label fw-semibold">Email Address</label>
                        <input type="email" class="form-control" placeholder="Enter Email">
                    </div>
                    <div class="mb-3">
                        <label class="form-label fw-semibold">Contact Number</label>
                        <input type="tel" class="form-control" placeholder="Enter Contact Number">
                    </div>
                    <div class="mb-3">
                        <label class="form-label fw-semibold">Car Type</label>
                        <select class="form-select">
                            <option value="">-- Select Car --</option>
                            <option>Sedan</option>
                            <option>SUV</option>
                            <option>Hatchback</option>
                            <option>Luxury</option>
                        </select>
                    </div>
                    <div class="row mb-3">
                        <div class="col-md-6">
                            <label class="form-label">Pickup Date & Time</label>
                            <input type="datetime-local" class="form-control">
                        </div>
                        <div class="col-md-6">
                            <label class="form-label">Pickup Location</label>
                            <input type="text" class="form-control" placeholder="Enter Pickup Location">
                        </div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-md-6">
                            <label class="form-label">Drop Date & Time</label>
                            <input type="datetime-local" class="form-control">
                        </div>
                        <div class="col-md-6">
                            <label class="form-label">Drop Location</label>
                            <input type="text" class="form-control" placeholder="Enter Drop Location">
                        </div>
                    </div>
                    <div class="mb-3">
                        <label class="form-label fw-semibold">Payment Method</label>
                        <select class="form-select">
                            <option value="">-- Select Payment Method --</option>
                            <option>Cash</option>
                            <option>Credit/Debit Card</option>
                            <option>Online Payment</option>
                        </select>
                    </div>
                </div>

                <div class="text-center">
                    <button class="btn btn-gradient px-4">Book Now</button>
                </div>

            </div>
        </div>
    </div>

    <script>
        function toggleForms() {
            const own = document.getElementById('ownDrive').checked;
            document.getElementById('ownDriveForm').style.display = own ? 'block' : 'none';
            document.getElementById('withDriverForm').style.display = own ? 'none' : 'block';
        }
    </script>

    <!-- Footer -->
    <footer class="bg-primary text-white text-center py-2 mt-4">
        <small class="fw-bold">© 2025 - Car_Rental_Management - Privacy</small>
    </footer>

</body>
</html>
